{
  "name": "walmart-challenge-backend",
  "version": "1.0.0",
  "author": "HECTOR MINGUEZ",
  "license": "MIT",
  "main": "dist/app.js",
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/register": "^7.10.5",
    "@types/node": "^14.6.0",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "nodemon": "^2.0.4",
    "ts-loader": "^8.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@types/express": "^4.17.7",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "webpack": "^4.44.1"
  },
  "scripts": {
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec ts-node-transpile-only ./src/app.ts",
    "start:prod": "tsc && node -r esm ./dist/app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "./node_modules/.bin/eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "./node_modules/.bin/eslint \"src/**/*.{js,ts}\" --fix",
    "jest": "NODE_ENV=test ./node_modules/.bin/jest --ci --color --detectOpenHandles --forceExit --verbose",
    "jest:watch": "yarn run jest --watch",
    "test:integration": "yarn run jest --roots=tests/integration",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "prettier:watch": "onchange 'src/**/*.{js,ts}' -- prettier --write {{changed}}"
  }
}
